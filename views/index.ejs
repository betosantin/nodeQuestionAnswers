<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>

        <body>

            <a href="/perguntar">
                Ir para a Pergunta</a>

            <div class="container">
                <hr>
                <h1> Perguntas </h1>
                <hr>
                <a href="/perguntar" class="btn btn-primary">
                    Perguntar</a>
                <hr>
                <% perguntas.forEach(pergunta=> { %>
                    <br />
                    <div class="card">
                        <div class="card-Body">
                            <h3>
                                <%= pergunta.titulo %>
                            </h3>
                        </div>

                        <div class="card-footer">
                            <a href="/pergunta/<%= pergunta.id%>" class="btn btn-primary">
                                Responder</a>
                        </div>
                    </div>
                    <% }) %>

            </div>

        </body>

        <%- include ('partials/footer.ejs') %>